/* pages/signevent/signevent.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #efefef;
  font-size: 36rpx;
}
.container{
  justify-content: flex-start;
}
.title{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}
.eventInfo{
  padding-top: 40rpx;
  background-color: #fff;
  height: 40%;
  width: 90%;
  padding-left: 5%;
  padding-right: 5%;
}
.eventInfo-item{
  margin: 0 auto;
  width: 60%;
  font-size: 28rpx;
  color: #555;
  height: 56rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.eventInfo-item .iconfont{
  margin-right: 6%;
}
.user-list{
  width: 80%;
  font-size: 32rpx;
}
.signed{
  color: #56bb36;
  margin-right: 20rpx;
}
.un-signed{
  color: #ddd;
  margin-right: 20rpx;
}
.user-item{
  margin-top: 10rpx;
  padding: 6rpx;
  padding-left: 40rpx;
  background-color: #fff;
}
